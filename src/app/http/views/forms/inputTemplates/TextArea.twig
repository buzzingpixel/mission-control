{% set rows = rows|default('6') %}
{% set codeEditor = codeEditor|default(false) %}

{% embed 'forms/inputTemplates/_fieldset.twig' %}
    {% block input %}
        <textarea
            rows="{{ rows }}"
            name="{{ name }}"
            id="{{ name }}"
            class="textarea{% if codeEditor %} JS-CodeEditor {% endif %} StandardForm__TextArea {% if thisInputHasErrors %} StandardForm__TextInput--HasError{% endif %}"
        >{{ value }}</textarea>
    {% endblock %}
{% endembed %}
